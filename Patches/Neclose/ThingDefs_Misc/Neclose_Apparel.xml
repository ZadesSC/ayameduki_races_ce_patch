<?xml version='1.0' encoding='utf-8'?>
<Patch>
  <Operation Class="PatchOperationSequence">
	<operations>
	  <li Class="PatchOperationFindMod">
			
		<mods><li>[Aya]Neclose Race</li></mods>
			
		<match Class="PatchOperationSequence">
		<operations>

        <!--========= Child's darkwear =========-->
        <li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Aya_Race_Ap_NC_C_T_a"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
				<StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
				<Bulk>2</Bulk>
				<WornBulk>0</WornBulk>
				</value>
		</li>

        <!--========= Hairetikos Armor =========-->
        <li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="HAR_NC_Armor_z"]/statBases/ArmorRating_Sharp</xpath>
				<value>
				<ArmorRating_Sharp>22</ArmorRating_Sharp>
				<Bulk>80</Bulk>
				<WornBulk>10</WornBulk>
				<CarryWeight>100</CarryWeight>
				<CarryBulk>20</CarryBulk>
				</value>
		</li>

		<li Class="PatchOperationConditional">
			<xpath>Defs/ThingDef[defName="HAR_NC_Armor_z"]/equippedStatOffsets</xpath>
			<nomatch Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="HAR_NC_Armor_z"]</xpath>
				<value>
					<equippedStatOffsets />
				</value>
			</nomatch>
		</li>

		<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="HAR_NC_Armor_z"]/equippedStatOffsets</xpath>
				<value>
				<CarryWeight>100</CarryWeight>
				<CarryBulk>20</CarryBulk>
				</value>
		</li>

        <li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="HAR_NC_Armor_z"]/statBases/ArmorRating_Blunt</xpath>
				<value>
				<ArmorRating_Blunt>50</ArmorRating_Blunt>
				</value>
		</li>

        <!--========= Hairetikos Helmet =========-->
        <li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="HAR_NC_Heads_z"]/statBases/ArmorRating_Sharp</xpath>
				<value>
				<ArmorRating_Sharp>18</ArmorRating_Sharp>
				<Bulk>40</Bulk>
				<WornBulk>10</WornBulk>
				<NightVisionEfficiency_Apparel>0.75</NightVisionEfficiency_Apparel>
				</value>
		</li>

        <li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="HAR_NC_Heads_z"]/statBases/ArmorRating_Blunt</xpath>
				<value>
				<ArmorRating_Blunt>38</ArmorRating_Blunt>
				</value>
		</li>

        <!--========= Hairetikoswear =========-->
        <li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="HAR_NC_Tops_z"]/statBases/StuffEffectMultiplierArmor</xpath>
				<value>
				<StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
				<Bulk>0.5</Bulk>
				<WornBulk>0.25</WornBulk>
				</value>
		</li>

        </operations>
		</match>	
	  </li>
	</operations>	
  </Operation>
</Patch>