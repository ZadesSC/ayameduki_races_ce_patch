				defName="HAR_ZC_Heads_a" or
				defName="HAR_ZC_Heads_b" or
				defName="HAR_ZC_Heads_c" or
                defName="HAR_ZC_Shell_a" or
                defName="HAR_ZC_Shell_b" or
                defName="HAR_ZC_Shell_c" or
                defName="HAR_ZC_Shell_d" or
                defName="HAR_ZC_Tops_a" or
                defName="HAR_ZC_Tops_b" or
                defName="HAR_ZC_Tops_c"
